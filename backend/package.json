{
  "name": "credentials-provider",
  "version": "1.0.0",
  "description": "Node.js based credentials-provider",
  "main": "index.ts",
  "scripts": {
    "dev": "nodemon ./src/modules/authentication/routes/index.ts",
    "start": "node ./src/modules/authentication/routes/index.ts",
    "db:generate": "drizzle-kit generate:pg --config=./src/modules/authentication/config/drizzle.config.ts",
    "db:delete": "drizzle-kit drop --config=./src/modules/authentication/config/drizzle.config.ts",
    "db:push": "drizzle-kit push:pg --config=./src/modules/authentication/config/drizzle.config.ts",
    "db:deploy": "ts-node ./drizzle/migrations/migrate.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/K-Link-Tech/credentials-provider.git/backend"
  },
  "keywords": [
    "CR-B"
  ],
  "author": "Aung Tay Zar Maung",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "commitizen": "^4.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.27.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.1",
    "postgres": "^3.3.5",
    "uuid": "^9.0.0",
    "zod": "^3.22.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/pg": "^8.10.2",
    "cz-emoji-conventional-changelog": "^0.0.0",
    "drizzle-kit": "^0.19.9",
    "nodemon": "^3.0.1",
    "typescript": "^5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji-conventional-changelog"
    }
  }
}
